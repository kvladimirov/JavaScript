<form class="form center-form" method="post">
  <h2 class="head-title">Edit Thread</h2>
  <br/><br/><br/>
  <div class="form-group">
    <label for="title">Thread title:</label>
    <input type="text" name="title" class="input-field" required value="{{thread.title}}"/>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" rows="10" class="input-field" required>{{thread.description}}</textarea>
  </div>
  <div class="form-group">
    <label for="category">Category:</label>
    <select name="category" class="input-field">
    {{#each categories}}
      {{#custIf ../thread.category "===" this._id}}
        <option value="{{../this._id}}" selected>{{../this.name}}</option>
      {{else}}
        <option value="{{../this._id}}">{{../this.name}}</option>
      {{/custIf}}
    {{/each}}
    </select>
  </div>
  <input type="submit" class="btn form-btn" value="Edit thread" />
</form>