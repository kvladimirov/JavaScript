<form class="form center-form" method="POST" enctype="multipart/form-data">>
    <h2 class="head-title">Добави нова статия</h2>
    <div class="form-group">
        <label for="title">Заглавие:</label>
        <input type="text" name="title" class="input-field" required/>
    </div>
    <div class="form-group">
        <label for="content">Съдържание:</label>
        <textarea name="content" rows="10" class="input-field" required></textarea>
    </div>
    <div class="form-group">
        <label for="image">Снимка</label>
        <input id="image" name="image" type="file" class="input-field" accept="image/*" />
      </div>
    <input type="submit" class="btn form-btn" value="Публикувай" />
</form>