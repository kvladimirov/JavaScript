<h1>New tweet</h1>

<form method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea required maxlength="500" name="description" rows="10"></textarea>
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <input id="image" name="image" type="file" class="input-field" accept="image/*" />
  </div>
  <br/><br/>
  <div class="form-group">
    <input type="submit" value="Add image">
  </div>
</form>